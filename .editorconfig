root = true

[*]
indent_size = 2
indent_style = space
end_of_line = lf
max_line_length = 90
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[.gitmodules]
indent_style = tab

[*.md]
max_line_length = 1111

[_shared/install/ansible/configure.sh]
max_line_length = 222

[_shared/install/ansible/style]
max_line_length = 144

[**/Dockerfile]
max_line_length = 222

[_shared/install/openwrt/*.diff]
indent_style = ''
max_line_length = unset

[_shared/install/ansible/build-appimage.sh]
max_line_length = 99
